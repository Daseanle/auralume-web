<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- 任务标识符 -->
    <key>Label</key>
    <string>com.auralume.dailyblog</string>

    <!-- 要执行的程序和参数 -->
    <key>ProgramArguments</key>
    <array>
        <string>/bin/bash</string>
        <string>/Volumes/MOVESPEED/下载/AIcode/AuraLume/auralume-web/schedule-daily-blog.sh</string>
    </array>

    <!-- 执行时间：每天早上 8 点（UTC-8 时区） -->
    <key>StartCalendarInterval</key>
    <dict>
        <key>Hour</key>
        <integer>8</integer>
        <key>Minute</key>
        <integer>0</integer>
    </dict>

    <!-- 标准输出日志文件 -->
    <key>StandardOutPath</key>
    <string>/tmp/auralume-blog.log</string>

    <!-- 错误输出日志文件 -->
    <key>StandardErrorPath</key>
    <string>/tmp/auralume-blog-error.log</string>

    <!-- 确保任务在系统睡眠时也能运行 -->
    <key>WakeSystem</key>
    <true/>

    <!-- 环境变量 -->
    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/usr/local/sbin:/usr/sbin:/sbin</string>
    </dict>

    <!-- 工作目录 -->
    <key>WorkingDirectory</key>
    <string>/Volumes/MOVESPEED/下载/AIcode/AuraLume/auralume-web</string>
</dict>
</plist>
